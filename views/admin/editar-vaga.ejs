<%- include('header') %>
  <h2> 
    Editar Vaga:
    <a href="/admin/vagas"> Vagas </a>
  </h2>
    <div>
      <fieldset> <legend> Dados Vaga </legend>
        <form method="POST">
          <label> Título: </label>
          <input type="text" name="titulo" value="<%= vagas.titulo %>">
          <br>
          <label> Descrição: </label>
          <textarea name="descricao"> <%= vagas.descricao %> </textarea>
          <br>
          <label> Categoria: </label>
          <select name="categoria">
            <% categorias.forEach(categorias => { %> 
            <option value="<%= categorias.id %>" <% if(categorias.id == vagas.categoria) { %> selected <% } %>>  <%= categorias.categoria %> </option>
            <% }) %>
          </select>
          <br>
          <button> Salvar Vaga </button>
        </form>
      </fieldset>
    </div>
<%- include('footer') %>